rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read/write access to chat images folder for authenticated users
    match /chat_images/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow read access to chat images for all users (for viewing messages)
    match /chat_images/{allPaths=**} {
      allow read: if request.auth != null;
    }
    
    // Allow read/write access to categories folder
    match /categories/{categoryId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow read/write access to services folder
    match /services/{serviceId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow read/write access to branches folder
    match /branches/{branchId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow read/write access to offers folder
    match /offers/{offerId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}